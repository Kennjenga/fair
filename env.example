# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fair_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Application Configuration
NODE_ENV=development
PORT=3000

# API Configuration
API_VERSION=v1

# Swagger/OpenAPI Configuration
SWAGGER_ENABLED=true

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h

# Brevo Email Service (SMTP Configuration)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_brevo_smtp_user_here
SMTP_PASSWORD=your_brevo_smtp_password_here
FROM_EMAIL=your_sender_email@example.com
FROM_NAME=FAIR Voting Platform

# Alternative: Brevo API Key (if using API instead of SMTP)
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_EMAIL=noreply@fair-voting.com
BREVO_SENDER_NAME=FAIR Voting Platform

# Avalanche Blockchain Configuration
AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
AVALANCHE_WALLET_PRIVATE_KEY=your_avalanche_wallet_private_key_here
AVALANCHE_EXPLORER_URL=https://testnet.snowtrace.io/tx

# Super Admin Initial Credentials (change after first login)
SUPER_ADMIN_EMAIL=admin@fair-voting.com
SUPER_ADMIN_PASSWORD=change_this_password_immediately


